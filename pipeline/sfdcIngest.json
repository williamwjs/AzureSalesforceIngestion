{
	"name": "sfdcIngest",
	"properties": {
		"description": "The task to ingest SFDC data",
		"activities": [
			{
				"name": "Ingest_Salesforce_Contacts",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 3,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Destination",
						"value": "salesforce/contacts"
					}
				],
				"typeProperties": {
					"source": {
						"type": "SalesforceSource",
						"query": "SELECT firstName, lastName, title FROM contact",
						"readBehavior": "queryAll"
					},
					"sink": {
						"type": "JsonSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings"
						},
						"formatSettings": {
							"type": "JsonWriteSettings",
							"filePattern": "setOfObjects"
						}
					},
					"enableStaging": false,
					"validateDataConsistency": true,
					"logSettings": {
						"enableCopyActivityLog": true,
						"copyActivityLogSettings": {
							"logLevel": "Warning",
							"enableReliableLogging": false
						},
						"logLocationSettings": {
							"linkedServiceName": {
								"referenceName": "Salesforce data",
								"type": "LinkedServiceReference"
							}
						}
					},
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"name": "FirstName",
									"type": "String"
								},
								"sink": {
									"path": "$['FirstName']"
								}
							},
							{
								"source": {
									"name": "LastName",
									"type": "String"
								},
								"sink": {
									"path": "$['LastName']"
								}
							},
							{
								"source": {
									"name": "Title",
									"type": "String"
								},
								"sink": {
									"path": "$['Title']"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "SalesforceSourceDataset",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "SalesforceContactsData",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "Ingest_Salesforce_OpportunityStages",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 3,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Destination",
						"value": "salesforce/opportunityStages"
					}
				],
				"typeProperties": {
					"source": {
						"type": "SalesforceSource",
						"query": "SELECT Value,Label FROM PicklistValueInfo WHERE EntityParticleId = 'Opportunity.StageName' AND IsActive=true ORDER BY Value DESC",
						"readBehavior": "query"
					},
					"sink": {
						"type": "JsonSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings"
						},
						"formatSettings": {
							"type": "JsonWriteSettings",
							"filePattern": "setOfObjects"
						}
					},
					"enableStaging": false,
					"validateDataConsistency": true,
					"logSettings": {
						"enableCopyActivityLog": true,
						"copyActivityLogSettings": {
							"logLevel": "Warning",
							"enableReliableLogging": false
						},
						"logLocationSettings": {
							"linkedServiceName": {
								"referenceName": "Salesforce data",
								"type": "LinkedServiceReference"
							},
							"path": ""
						}
					},
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"name": "Value",
									"type": "String"
								},
								"sink": {
									"path": "$['Value']"
								}
							},
							{
								"source": {
									"name": "Label",
									"type": "String"
								},
								"sink": {
									"path": "$['Label']"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "SalesforceSourceDataset",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "SalesforceOpportunityStagesData",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": [],
		"lastPublishTime": "2021-04-01T01:41:06Z"
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}